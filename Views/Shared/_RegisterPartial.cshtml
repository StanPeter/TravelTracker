@model TravelTracker.Models.DTOs.RegisterDto

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2>Register</h2>
    <form asp-controller="User" asp-action="Register" method="post">
        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="RepeatPassword"></label>
            <input asp-for="RepeatPassword" class="form-control" type="password" />
            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
